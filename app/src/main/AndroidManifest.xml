<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csuft.phoneinterception">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <!-- <uses-permission android:name="android.permission.MODIFY_PHONE_STATE"/> -->
    <!-- <uses-permission android:name="android.permission.INSTALL_PACKAGES"/> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:sharedUserId="android.uid.system"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".broadcast.PhoneReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />

                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="TelephonyManager.ACTION_PHONE_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.ContactsService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.AddWhiteActivity"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/MyTheme2" />
        <activity android:name=".activity.WhiteListActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name=".activity.BlackListActivity" />
        <activity android:name=".activity.AddBlackActivity"></activity>
    </application>

</manifest>